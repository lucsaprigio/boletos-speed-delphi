unit frm.boletos.speed;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, StrUtils,System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Grids, Vcl.DBGrids,
  Vcl.ExtCtrls, Data.DB, FireDAC.Stan.Intf, FireDAC.Stan.Option,
  FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS, FireDAC.Phys.Intf,
  FireDAC.DApt.Intf, FireDAC.Comp.DataSet, FireDAC.Comp.Client, uDTOBoletos,
  controller.boletos.speed, dao.retorno.speed.boletos, Vcl.StdCtrls, Vcl.Buttons;

type
  Tfrm_boletos_speed = class(TForm)
    pnlTop: TPanel;
    pnlGrid: TPanel;
    dbGridDados: TDBGrid;
    ds_boletos: TDataSource;
    BitBtn1: TBitBtn;
    procedure BitBtn1Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    procedure BuscarBoletosAPI;
    procedure BuscarBoletosLocal;
    Procedure MontarGrid(memTable: TFDMemTable);
  public
    { Public declarations }
  end;

var
  frm_boletos_speed: Tfrm_boletos_speed;

implementation

{$R *.dfm}

procedure Tfrm_boletos_speed.BitBtn1Click(Sender: TObject);
begin
   BuscarBoletosLocal;
end;

procedure Tfrm_boletos_speed.BuscarBoletosAPI;
var
  MemTable             : TFDMemTable;
  BoletosController    : TControllerBoletosSpeed;
  vCliente             : Integer;
begin
    MemTable   := TFDMemTable.Create(nil);
  vCliente   := 1;

  BoletosController := TControllerBoletosSpeed.Create;
  try
   MemTable := BoletosController.BuscarBoletos(vCliente);

   ds_boletos.DataSet := MemTable;
  finally
    BoletosController.Free;
  end;
end;

procedure Tfrm_boletos_speed.BuscarBoletosLocal;
var
  BoletosService : TSpeedBoletos;
  mtDados      : TFDMemTable;
begin
 // Buscar Localmente (Testes)
   BoletosService := TSpeedBoletos.Create(1);

   try
    BoletosService.pCliente := 1;
    mtDados                 := BoletosService.lista_mem_table;

    ds_boletos.DataSet := mtDados;
   finally
     BoletosService.Free;
   end;

end;

procedure Tfrm_boletos_speed.FormCreate(Sender: TObject);
begin
    dbGridDados.DataSource := ds_boletos;
end;

procedure Tfrm_boletos_speed.MontarGrid(memTable: TFDMemTable);
var
  Field : TField;
begin
  for Field in memTable.Fields do
  begin
    case IndexStr(UpperCase(Field.FieldName), [
      'SP_DOCUMENTO', // 0
      'SP_PARCELA', // 1
      'SP_VALOR', // 2
      'SP_VENCIMENTO', // 3
      'SP_ATRZ', // 4
      'SP_DIAS', // 5
      'SP_PIX' // 6
    ]) of
     0:
     begin
       Field.DisplayLabel := 'Nº Documento';
       Field.DisplayWidth := 15;
     end;

     1:
     begin
        Field.DisplayLabel := 'Parc.';
        Field.Alignment    := taCenter;
        Field.DisplayWidth := 8;
     end;

     2:
     begin
        Field.DisplayLabel := 'Valor Total';
        if Field is TNumericField then
          TNumericField(Field).DisplayFormat := 'R$ #,##0.00';
     end;

     3:
     begin
        Field.DisplayLabel := 'Vencimento';
        Field.Alignment    := taCenter;
        // Ajusta a máscara para Data
        if Field is TDateTimeField then
          TDateTimeField(Field).DisplayFormat := 'dd/mm/yyyy';
     end;

     4:
     begin
      Field.Visible := False;
     end;

     5:
     begin
       Field.DisplayLabel := 'Dias';
       Field.DisplayWidth := 10;
     end;

     6:
     begin
        Field.DisplayLabel := 'Valor PIX';
        if Field is TNumericField then
          TNumericField(Field).DisplayFormat := 'R$ #,##0.00';
     end;
    end;
  end;

end;

end.
